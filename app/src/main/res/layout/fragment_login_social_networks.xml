<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="@drawable/divider">

    <fragment
        android:tag="google"
        android:name="gs.firebase.demo.views.login.GoogleLoginFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_login_google" />

    <fragment
        android:tag="facebook"
        android:name="gs.firebase.demo.views.login.FacebookLoginFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_login_facebook" />

    <fragment
        android:tag="github"
        android:name="gs.firebase.demo.views.login.GitHubLoginFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_login_github" />

</LinearLayout>
