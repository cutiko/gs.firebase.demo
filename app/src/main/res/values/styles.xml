<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="cardViewStyle">@style/AppTheme.CardView</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:buttonStyleToggle">?buttonStyle</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/margin</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/margin</item>
        <item name="elevation">@dimen/margin</item>
    </style>

    <style name="ThemeOverlay.Inverse" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.GitHub" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/github</item>
    </style>

    <style name="Widget.FloatingActionButton.Transparent" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="fabSize">mini</item>
        <item name="elevation">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

</resources>
